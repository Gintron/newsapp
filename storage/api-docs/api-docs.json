        "/api/news": {
            "get": {
                "tags": [
                    "News"
                ],
                "summary": "Retrieve news articles",
                "description": "Get a paginated list of news articles with optional filters such as search, date, category, and source.",
                "operationId": "d2f115cbffa4bba0c3c7bc85f289871e",
                "parameters": [
                    {
                        "name": "search",
                        "in": "query",
                        "description": "Search term for the news title or content.",
                        "required": false,
                        "schema": {
                            "type": "string",
                            "example": "general"
                        }
                    },
                    {
                        "name": "date",
                        "in": "query",
                        "description": "Filter news by a specific date in YYYY-MM-DD format.",
                        "required": false,
                        "schema": {
                            "type": "string",
                            "format": "date",
                            "example": "2024-12-20"
                        }
                    },
                    {
                        "name": "category",
                        "in": "query",
                        "description": "Filter news by category ID.",
                        "required": false,
                        "schema": {
                            "type": "integer",
                            "example": 3
                        }
                    },
                    {
                        "name": "source",
                        "in": "query",
                        "description": "Filter news by source name (e.g., guardian, newsapi, new_york_times).",
                        "required": false,
                        "schema": {
                            "type": "string",
                            "example": "guardian"
                        }
                    },
                    {
                        "name": "page",
                        "in": "query",
                        "description": "Specify the page number for pagination.",
                        "required": false,
                        "schema": {
                            "type": "integer",
                            "example": 1
                        }
                    }
                ],
                "responses": {
                    "200": {
                        "description": "Successful response with a list of news articles.",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "type": "array",
                                    "items": {
                                        "properties": {
                                            "id": {
                                                "type": "integer",
                                                "example": 1
                                            },
                                            "title": {
                                                "type": "string",
                                                "example": "Breaking News: general Advances"
                                            },
                                            "content": {
                                                "type": "string",
                                                "example": "Details about the news article..."
                                            },
                                            "category_id": {
                                                "type": "integer",
                                                "example": 3
                                            },
                                            "source": {
                                                "type": "string",
                                                "example": "guardian"
                                            },
                                            "created_at": {
                                                "type": "string",
                                                "format": "date-time",
                                                "example": "2024-12-20T14:00:00Z"
                                            }
                                        },
                                        "type": "object"
                                    }
                                }
                            }
                        }
                    },
                    "400": {
                        "description": "Bad request due to invalid parameters.",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "properties": {
                                        "message": {
                                            "type": "string",
                                            "example": "Invalid parameters provided."
                                        }
                                    },
                                    "type": "object"
                                }
                            }
                        }
                    }
                }
            }
        },
